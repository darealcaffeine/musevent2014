source 'https://rubygems.org'

gem 'rails', '3.2.11'

# some gems useful for comfortable development
group :development do
  gem 'sqlite3'
  gem 'rails_best_practices'
  gem 'annotate'
end

group :production do
  gem 'pg'
end

group :assets do
  gem 'sass-rails', '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

# stuff for views
gem 'jquery-rails'
gem 'bootstrap-sass', '~> 2.0.4.0'
gem 'haml-rails'
gem 'haml_coffee_assets'

# auth gems
gem 'devise'
gem 'cancan'

gem 'paperclip'

gem 'rails_admin'

# for processing Amazon Payments
gem 'aws-sdk'
gem 'remit'

gem 'simple_enum'
gem 'kaminari'

group :test, :development do
  gem 'rspec-rails'
end

group :test do
  gem 'factory_girl_rails'
  gem 'shoulda-matchers'
end

gem "rails-backbone"
gem 'underscore-rails'
gem 'gon'
gem 'rabl'
gem "backbone-support"